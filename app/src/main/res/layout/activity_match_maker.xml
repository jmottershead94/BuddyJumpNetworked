<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBlue">

    <!-- This is the text to tell the player that they are match making. -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:text="MATCH MAKER"
        android:id="@+id/matchMakerTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <!-- This is the button to host a game. -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Host"
        android:id="@+id/hostButton"
        android:background="@color/reallyLightBlue"
        android:layout_marginTop="90dp"
        android:layout_below="@+id/matchMakerTextView"
        android:layout_centerHorizontal="true" />

    <!-- This is the button to join a game. -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join"
        android:id="@+id/joinButton"
        android:background="@color/reallyLightBlue"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/hostButton" />

    <!-- This is the button to go back to the main menu. -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Menu"
        android:id="@+id/matchMakerMainMenuButton"
        android:background="@color/reallyLightBlue"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <!-- This is the button to go back to the connection selection screen. -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/matchMakerBackButton"
        android:background="@color/reallyLightBlue"
        android:layout_alignTop="@+id/matchMakerMainMenuButton"
        android:layout_alignParentEnd="true" />

</RelativeLayout>